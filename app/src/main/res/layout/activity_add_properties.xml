<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".AddPropertiesActivity">

    <include
        android:id="@+id/toolbar_nav"
        layout="@layout/toolbar_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">


            <TableRow>

                <TextView
                    android:id="@+id/properties_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_name" />

                <EditText
                    android:id="@+id/properties_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/properties_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_price" />

                <EditText
                    android:id="@+id/properties_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/properties_city_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_city"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/properties_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/properties_region_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_region" />

                <EditText
                    android:id="@+id/properties_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/properties_address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_address" />

                <EditText
                    android:id="@+id/properties_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/properties_area_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_size" />

                <EditText
                    android:id="@+id/properties_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/properties_listed_for_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_listed_for" />

                <Spinner
                    android:id="@+id/properties_listed_for"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/properties_listed_for_array" />

            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/properties_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_type" />

                <Spinner
                    android:id="@+id/properties_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/properties_type_array" />
            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/properties_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_description" />

                <EditText
                    android:id="@+id/properties_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </TableRow>


            <TableRow>

                <TextView
                    android:id="@+id/properties_notes_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_notes" />

                <EditText
                    android:id="@+id/properties_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/properties_mobile_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_mobile" />

                <EditText
                    android:id="@+id/properties_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/properties_land_number_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/properties_land_number" />

                <EditText
                    android:id="@+id/properties_land_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone" />

            </TableRow>

            <Button
                android:id="@+id/properties_gallery_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="openPropertiesGalleryIntent"
                android:text="@string/prescriptions_gallery_button_string" />

            <Button
                android:id="@+id/properties_camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="openCameraIntent"
                android:text="@string/prescriptions_camera_button_string" />

            <Button
                android:id="@+id/properties_post_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="addProperties"
                android:text="@string/prescriptions_post_button_string" />

        </TableLayout>
    </ScrollView>


    <ImageView
        android:id="@+id/uploaded_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:srcCompat="@tools:sample/avatars" />

    <ProgressBar
        android:id="@+id/presecription_post_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</LinearLayout>