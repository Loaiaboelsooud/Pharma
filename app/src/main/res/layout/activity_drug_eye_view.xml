<tools:LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DrugEyeViewActivity">

    <include
        android:id="@+id/toolbar_nav"
        layout="@layout/toolbar_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/drug_eye_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/drug_eye_active_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#008000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/drug_eye_old_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/drug_eye_new_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/drug_eye_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/drug_eye_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#008000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/drug_eye_package_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/drug_eye_uses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp" />


</tools:LinearLayout>