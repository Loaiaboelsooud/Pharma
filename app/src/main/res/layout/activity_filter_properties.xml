<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilterPropertiesActivity">

    <include
        android:id="@+id/toolbar_nav"
        layout="@layout/toolbar_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/properties_filter_sell_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/properties_filter_sell_string"

        />

    <CheckBox
        android:id="@+id/properties_filter_rent_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/properties_filter_rent_string" />

    <CheckBox
        android:id="@+id/properties_filter_pharmacy_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/properties_filter_pharmacy_string" />

    <CheckBox
        android:id="@+id/properties_filter_warehouse_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/properties_filter_warehouse_string" />

    <CheckBox
        android:id="@+id/properties_filter_factory_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/properties_filter_factory_string" />

    <CheckBox
        android:id="@+id/properties_filter_hospital_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/properties_filter_hospital_string" />

    <Button
        android:id="@+id/properties_search_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/properties_filter_button_string" />

</LinearLayout>