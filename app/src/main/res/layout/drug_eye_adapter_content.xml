<tools:FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:orientation="horizontal"
    tools:context=".SearchAndViewDrugEyeActivity">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/drug_eye_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/drug_eye_adapter_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/drug_eye_adapter_active_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#008000" />

            <!--
                        <TextView
                            android:id="@+id/drug_eye_adapter_old_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/drug_eye_adapter_new_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/drug_eye_adapter_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp" />

            -->
            <TextView
                android:id="@+id/drug_eye_adapter_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#008000" />

            <!--
                        <TextView
                            android:id="@+id/drug_eye_adapter_package_size"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/drug_eye_adapter_uses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15dp" />

            -->

        </LinearLayout>
    </android.support.v7.widget.CardView>
</tools:FrameLayout>